{
  "private": true,
  "name": "epherome",
  "version": "0.0.4",
  "description": "Powerful Minecraft Launcher",
  "main": "dist/main.js",
  "scripts": {
    "serve": "webpack serve --env dev --env process='renderer'",
    "electron": "webpack build --env dev --env process='main' && electron . --remote-debugging-port=9222",
    "test": "mocha --require ts-node/register test/**/*.spec.ts",
    "lint": "eslint src/**/*.ts src/**/*.tsx test/**/*.ts",
    "dev": "concurrently -n wdm,ele 'npm:serve' 'npm:electron'",
    "prod": "webpack build --env prod --env process='all'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ResetPower/epherome.git"
  },
  "author": "ResetPower <resetpower20@gmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ResetPower/epherome/issues"
  },
  "build": {
    "productName": "Epherome",
    "appId": "com.epherome",
    "copyright": "Copyright (c) ResetPower 2021. All rights reserved.",
    "directories": {
      "output": "package"
    },
    "asar": true,
    "compression": "normal",
    "icon": "assets/Epherome.png",
    "win": {
      "target": "portable"
    },
    "files": [
      "dist/",
      "!node_modules"
    ]
  },
  "homepage": "https://github.com/ResetPower/epherome#readme",
  "devDependencies": {
    "@types/css-minimizer-webpack-plugin": "^3.0.2",
    "@types/mini-css-extract-plugin": "^2.0.1",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^3.11.5",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "concurrently": "^6.2.0",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "mocha": "^9.0.2",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "spectron": "^15.0.0",
    "tailwindcss": "^2.2.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "got": "^11.8.2",
    "material-design-icons": "^3.0.1",
    "node-stream-zip": "^1.13.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
