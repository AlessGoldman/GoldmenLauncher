{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "./out",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "eph/*": ["eph/*"],
      "core/*": ["core/*"],
      "assets/*": ["assets/*"],
      "styles/*": ["styles/*"],
      "common/*": ["common/*"],
      "ext/*": ["extension/*"]
    }
  },
  "include": ["./src"]
}
