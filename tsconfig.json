{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "*": ["node_modules/*"],
      "assets/*": ["src/assets/*"],
      "common/*": ["src/common/*"],
      "core/*": ["src/core/*"],
      "eph/*": ["src/eph/*"]
    }
  },
  "include": ["src/**/*"]
}
