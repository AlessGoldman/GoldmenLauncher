{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./out",
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}
